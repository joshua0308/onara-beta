<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <!-- download phaser and socket.io on the client side -->
  <script src="//cdn.jsdelivr.net/npm/phaser@3.16.2/dist/phaser.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>

  <style>
    body, html {
      height: 100%;
      margin: 0;
      padding: 0;
      background-color: black;
    }

    canvas {
      margin: 0;
    }

    #game-wrapper {
      height: 100%;
    }

    #menu-button-wrapper {
      display: flex;
      flex-direction: column;
      justify-content: center;
      position: fixed;
      top: 0;
      right: 0;
      margin: 10px;
      box-sizing: border-box;
    }

    .button {
      box-sizing: border-box;
      width: 100px;
      margin: 5px;
      height: 30px;
    }

    #call-button-wrapper {
      position: fixed;
      width: 100%;
      bottom: 50px;
      display: flex;
      justify-content: center;
      display: none;
    }
  </style>
</head>

<body>
  <!-- entrypoint to the game files -->
  <script type="module" src="src/index.js"></script>
  <div id='game-wrapper'></div>
  <div id='menu-button-wrapper'>
    <button id="profile-button" class="button" type="button" onclick="profile()">Profile</button>
    <button id="logout-button" class="button" type="button" onclick="logout()">Logout</button>
  </div>
  <div id='call-button-wrapper'>
    <button class="button" id="accept-button">Accept</button>
    <button class="button" id="decline-button">Decline</button>
  </div>
  <!-- firebase -->
  <script src="https://www.gstatic.com/firebasejs/8.2.3/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/8.2.3/firebase-auth.js"></script>
  <script src="public/simplepeer.min.js"></script>
  <script src="public/firebase.js"></script>
  <script src="public/game.js"></script>
</body>

</html>