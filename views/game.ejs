<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <!-- download phaser and socket.io on the client side -->
  <script src="//cdn.jsdelivr.net/npm/phaser@3.16.2/dist/phaser.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>

  <style>
    body,
    html {
      height: 100%;
      margin: 0;
      padding: 0;
      background-color: black;
    }

    canvas {
      margin: 0;
    }

    #game-wrapper {
      height: 100%;
    }

    #menu-button-wrapper {
      display: flex;
      flex-direction: column;
      justify-content: center;
      position: fixed;
      top: 0;
      right: 0;
      margin: 10px;
      box-sizing: border-box;
    }

    button {
      box-sizing: border-box;
      width: 100px;
      margin: 5px;
      height: 30px;
    }

    .bottom-button-wrapper {
      position: fixed;
      width: 100%;
      bottom: 50px;
      display: flex;
      justify-content: center;
    }

    #call-button-wrapper {
      display: none;
    }

    .modal {
      display: none;
      /* Hidden by default */
      position: fixed;
      /* Stay in place */
      z-index: 1;
      /* Sit on top */
      left: 0;
      top: 0;
      width: 100%;
      /* Full width */
      height: 100%;
      /* Full height */
      overflow: auto;
      /* Enable scroll if needed */
      background-color: rgb(0, 0, 0);
      /* Fallback color */
      background-color: rgba(74, 67, 67, 0.4);
      /* Black w/ opacity */
    }

    .modal-content {
      margin: auto;
      width: 80%;
      height: 100%;
      display: flex;
      justify-content: space-around;
      align-items: center;
    }

    video {
      height: 400px;
      width: 400px;
      object-fit: cover;
      padding: 8px;
      border-radius: 200px;
    }

    #caller-name {
      color: white;
    }
  </style>
</head>

<body>
  <!-- entrypoint to the game files -->
  <script type="module" src="src/index.js"></script>
  <div class="modal" id="modal-wrapper">
    <div class="modal-content">
      <video id="my-video"></video>
      <video id="other-video"></video>
    </div>
    <div id='in-call-button-wrapper' class='bottom-button-wrapper'>
      <!-- <button id='toggle-video'>Turn video off</button>
                  <button id='toggle-video'>Mute</button> -->
      <!-- <button class="button" id="end-call-button">Leave chat</button> -->
    </div>
  </div>
  <div id='game-wrapper'></div>
  <div id='menu-button-wrapper'>
    <button id="profile-button" type="button" onclick="profile()">Profile</button>
    <button id="logout-button" type="button" onclick="logout()">Logout</button>
  </div>
  <div id='call-button-wrapper' class='bottom-button-wrapper'>
    <div id='caller-name'></div>
    <!-- <button class="button" id="accept-button">Accept</button> -->
    <!-- <button class="button" id="decline-button">Decline</button> -->
  </div>

  <!-- firebase -->
  <script src="https://www.gstatic.com/firebasejs/8.2.3/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/8.2.3/firebase-auth.js"></script>
  <script src="public/simplepeer.min.js"></script>
  <script src="public/firebase.js"></script>
  <script src="public/game.js"></script>
</body>`

</html>