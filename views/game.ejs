<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <!-- download phaser and socket.io on the client side -->
  <script src="//cdn.jsdelivr.net/npm/phaser@3.16.2/dist/phaser.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>

  <style>

    body {
      height: 100vh;
      margin: 0;
      padding: 0;
      font-family: Arial, Helvetica, sans-serif;
    }

    canvas {
      /* margin-right: 160px; */
    }

    #game-wrapper {
      /* height: 100%; */
    }

    #menu-button-wrapper {
      display: flex;
      flex-direction: column;
      justify-content: center;
      position: fixed;
      top: 0;
      left: 0;
      /* margin: 10px; */
      /* box-sizing: border-box; */
    }

    button {
      box-sizing: border-box;
      width: 100px;
      margin: 5px;
      height: 30px;
    }

    .bottom-button-wrapper {
      position: fixed;
      width: 100%;
      bottom: 50px;
      display: flex;
      justify-content: center;
    }

    #call-button-wrapper {
      display: none;
    }

    .modal {
      display: none;
      /* Hidden by default */
      position: fixed;
      /* Stay in place */
      z-index: 1;
      /* Sit on top */
      left: 0;
      top: 0;
      width: 100%;
      /* Full width */
      height: 100%;
      /* Full height */
      overflow: auto;
      /* Enable scroll if needed */
      background-color: rgb(0, 0, 0);
      /* Fallback color */
      background-color: rgba(74, 67, 67, 0.4);
      /* Black w/ opacity */
    }

    .modal-content {
      margin: auto;
      width: 80%;
      height: 100%;
      display: flex;
      justify-content: space-around;
      align-items: center;
    }

    video {
      height: 400px;
      width: 400px;
      object-fit: cover;
      padding: 8px;
      border-radius: 200px;
    }

    #caller-name {
      color: white;
    }

    #online-list-wrapper {
      width: 10vw;
      min-width: 150px;
      position: fixed;
      top: 0;
      right: 0;
      height: 100vh;
      background-color: rgba(45, 45, 53, 0.8);
      backdrop-filter: blur(6px);
      color: white;
      font-size: 20px;
    }

    ul {
      list-style-type: none;
      padding: 0;
    }

    li {
      margin-top: 8px;
      text-align: center;
      font-weight: 200;
    }

    #online-list-wrapper div {
      margin-top: 20px;
      font-weight: 600;
      text-align: center;
    }

    #caller-card-placeholder {
      position: fixed;
      bottom: 20%;
      left: 0;
      margin-left: 20px;
      width: 250px;
      height: 300px;
      background-color: rgb(255, 255, 255, 0.9);
      border-radius: 30px;
      padding: 10px;
      display: none;
      justify-content: center;
    }

    #caller-card {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-evenly;
    }
    
    #caller-info { }
    
    #caller-buttons-wrapper {
      display: flex;
    }

    #accept-button {
      border-radius: 10px;
      border-style: none;
      background-color: rgb(69, 176, 69);
      color: white;
    }
    #accept-button:hover {
      background-color: rgb(55, 159, 50);
    }
    #decline-button {
      border-radius: 10px;
      border-style: none;
      background-color: rgb(218, 74, 74);
      color: white;
    }
    #decline-button:hover {
      background-color: rgb(199, 59, 59);
    }

    #caller-card img {
      height: 100px;
      border-radius: 50px;
    }
  </style>
</head>

<body>
  <!-- entrypoint to the game files -->
  <script type="module" src="src/index.js"></script>
  <div id='caller-card-placeholder'></div>
  <div class="modal" id="modal-wrapper">
    <div class="modal-content">
      <video id="my-video"></video>
      <video id="other-video"></video>
    </div>
    <div id='in-call-button-wrapper' class='bottom-button-wrapper'></div>
  </div>
  <div id='game-wrapper'></div>
  <div id='online-list-wrapper'>
    <div>
      Players online
    </div>
    <ul id='online-list'>
    </ul>
  </div>
  <div id='menu-button-wrapper'>
    <button id="profile-button" type="button" onclick="profile()">Profile</button>
    <button id="logout-button" type="button" onclick="logout()">Logout</button>
  </div>

  <!-- firebase -->
  <script src="https://www.gstatic.com/firebasejs/8.2.3/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/8.2.3/firebase-auth.js"></script>
  <script src="public/simplepeer.min.js"></script>
  <script src="public/firebase.js"></script>
  <script src="public/game.js"></script>
</body>

</html>