<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <!-- download phaser and socket.io on the client side -->
  <script src="//cdn.jsdelivr.net/npm/phaser@3.52.0/dist/phaser.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>

  <style>

    body {
      height: 100vh;
      margin: 0;
      padding: 0;
      font-family: Arial, Helvetica, sans-serif;
    }

    canvas {
      /* margin-right: 160px; */
    }

    #game-wrapper {
      /* height: 100%; */
    }

    #menu-buttons-wrapper {
      display: flex;
      flex-direction: column;
      justify-content: center;
      position: fixed;
      top: 0;
      left: 0;
      /* margin: 10px; */
      /* box-sizing: border-box; */
    }

    button {
      box-sizing: border-box;
      width: 100px;
      margin: 5px;
      height: 30px;
    }

    #in-call-buttons-wrapper {
      position: fixed;
      width: 100%;
      bottom: 50px;
      display: flex;
      justify-content: center;
    }

    #call-button-wrapper {
      display: none;
    }

    #in-call-modal-wrapper {
      display: none;
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      /* overflow: auto; */
      /* Enable scroll if needed */
      background-color: rgb(0, 0, 0);
      background-color: rgba(74, 67, 67, 0.4);
    }

    #bar-questionnaire-modal-wrapper {
      display: none;
      justify-content: center;
      align-items: center;
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      /* overflow: auto; */
      /* Enable scroll if needed */
      background-color: rgb(0, 0, 0);
      background-color: rgba(74, 67, 67, 0.4);
    }

    #questionnaire-wrapper {
      display: flex;
      flex-direction: column;
      align-items: center;
      background-color: rgba(218, 218, 218, 0.8);
      border-radius: 20px;
    }

    #questionnaire-question {
      font-size: 30px;
      margin: 30px;
    }

    #level-one-option-wrapper {
      padding: 20px;
      display: flex;
      flex-flow: row wrap;
      justify-content: space-around;
      width: 100%;
      box-sizing: border-box;
    }

    #level-one-option {
      margin: 10px;
      min-width: 150px;
      height: 80px;
      background-color: rgb(167, 242, 176);
      border-radius: 20px;
      text-align: center;
      font-size: 30px;
      line-height: 80px;
      cursor: pointer;
    } 

    #join-bar-button:hover {
      background-color: rgb(63, 228, 115);
    }

    #join-bar-button:active {
      background-color: rgb(45, 189, 98);
    }

    #back-to-game-button:hover {
      background-color: rgb(244, 105, 95);
    }

    #back-to-game-button:active {
      background-color: rgb(235, 78, 66);
    }

    #action-buttons-wrapper {
      display: flex;
      justify-content: center;
    }
    
    #back-to-game-button, #join-bar-button {
      margin: 10px;
      min-width: 150px;
      height: 30px;
      line-height: 30px;
      border-style: solid;
      border-width: 2px;
      border-radius: 20px;
      text-align: center;
      font-size: 15px;
      cursor: pointer;
    }

    #videos-wrapper {
      margin: auto;
      width: 80%;
      height: 100%;
      display: flex;
      justify-content: space-around;
      align-items: center;
    }

    video {
      height: 400px;
      width: 400px;
      object-fit: cover;
      padding: 8px;
      border-radius: 200px;
    }

    #caller-name {
      color: white;
    }

    #online-list-wrapper {
      width: 10vw;
      min-width: 150px;
      position: fixed;
      top: 0;
      right: 0;
      height: 100vh;
      background-color: rgba(45, 45, 53, 0.8);
      backdrop-filter: blur(6px);
      color: white;
      font-size: 20px;
    }

    #player-profile-wrapper {
      width: 0px;
      transition: 0.5s;
      overflow-x: hidden;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 1;
      height: 100vh;
      background-color: rgba(215, 215, 215, 0.8);
      backdrop-filter: blur(2px);
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    #player-image {
      width: 200px;
      margin: 10px;
      margin-top: 50px;
      border-radius: 100px;
    }

    #player-name {
      overflow-x: hidden;
      width: 210px;
      text-align: center;
    }

    #player-bio {
      overflow-x: hidden;
      width: 210px;
      margin: 20px;
    }

    #profile-close-button {
      position: absolute;
      top: 0;
      right: 25px;
      font-size: 36px;
      margin-left: 50px;
    }

    ul {
      list-style-type: none;
      padding: 0;
    }

    li {
      margin-top: 8px;
      text-align: center;
      font-weight: 200;
    }

    #online-list-wrapper div {
      margin-top: 20px;
      font-weight: 600;
      text-align: center;
    }

    #caller-card-wrapper {
      display: none;
      justify-content: center;
      align-items: center;
      position: fixed;
      z-index: 1;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(74, 67, 67, 0.4);
    }

    #caller-card {
      padding: 10px;
      width: 250px;
      height: 300px;
      background-color: rgb(255, 255, 255, 0.9);
      border-radius: 30px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-evenly;
    }
    
    #caller-info { }
    
    #caller-buttons-wrapper {
      display: flex;
    }

    #accept-button {
      border-radius: 10px;
      border-style: none;
      background-color: rgb(69, 176, 69);
      color: white;
    }

    #accept-button:hover {
      background-color: rgb(55, 159, 50);
    }

    #decline-button {
      border-radius: 10px;
      border-style: none;
      background-color: rgb(218, 74, 74);
      color: white;
    }
    
    #decline-button:hover {
      background-color: rgb(199, 59, 59);
    }

    #caller-card img {
      height: 100px;
      border-radius: 50px;
    }

    #player-sprite {
      font-size: 8px;
      color: white;
    }
  </style>
</head>

<body>

  <div id='caller-card-wrapper'></div>
  <div id="in-call-modal-wrapper"></div>
  <div id='game-wrapper'></div>
  <div id='bar-questionnaire-modal-wrapper'></div>
  <div id='online-list-wrapper'></div>
  <div id='player-profile-wrapper'></div>
  <div id='menu-buttons-wrapper'>
    <button id="profile-button" type="button" onclick="profile()">Profile</button>
    <button id="logout-button" type="button" onclick="logout()">Logout</button>
  </div>

  <!-- firebase -->
  <script src="https://www.gstatic.com/firebasejs/8.2.3/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/8.2.3/firebase-auth.js"></script>
  <script src="public/simplepeer.min.js"></script>
  <script src="public/firebase.js"></script>
  <script src="public/game.js"></script>
  <!-- entrypoint to the game files -->
  <script type="module" src="src/index.js"></script>
</body>

</html>